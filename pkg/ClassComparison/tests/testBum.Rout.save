[1] 0.9318363
> 
> fdr <- 0.2
> countSignificant(fit, alpha=fdr, by="FDR")
[1] 46
> picked <- selectSignificant(fit, alpha=fdr, by="FDR")
> 
> truth <- rep(c("Null", "Real"), times=c(nUnif, nGenes-nUnif))
> 
> table(truth, picked)
