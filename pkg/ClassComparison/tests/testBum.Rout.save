> set.seed(782562)
> betaPerc <- 0.10
> nGenes <- 1000
> alpha <- 0.2
> nUnif <- trunc(nGenes*(1-betaPerc))
> pvals <- c(runif(nUnif), rbeta(nGenes-nUnif, alpha, 1))
> fit <- Bum(pvals)
